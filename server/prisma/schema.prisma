generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TechnologyEntry {
  id             Int          @id @default(autoincrement())
  name           String       @unique
  category       TechCategory
  ring           TechRing
  description    String
  classification String
  date           DateTime     @default(now())
}

enum TechCategory {
  technique
  tool
  plattform
  languageOrFramework
}

enum TechRing {
  adopt
  trial
  assess
  hold
}
